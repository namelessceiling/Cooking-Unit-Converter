<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <color name="black">#FF000000</color>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="white">#FFFFFFFF</color>
    <dimen name="min_text_height">48dp</dimen>
    <string name="app_name">Cooking Unit Converter</string>
    <string name="base_case">Enter the amount you want converted</string>
    <string name="calculate">Calculate</string>
    <string name="cup">Cup(s)</string>
    <string name="fluid_ounces">Fluid Ounces</string>
    <string name="from_unit">From</string>
    <string name="gallons">Gallon(s)</string>
    <string name="pints">Pint(s)</string>
    <string name="quarts">Quart(s)</string>
    <string name="result">Result: %s</string>
    <string name="round_up">Round up?</string>
    <string name="tablespoon">Tablespoon(s)</string>
    <string name="teaspoon">Teaspoon(s)</string>
    <string name="to_unit">To</string>
    <style name="Theme.CookingUnitConverter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:statusBarColor" ns1:targetApi="21">?attr/colorPrimaryVariant</item>
        
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="switchStyle">@style/Widget.CookingUnitConverter.CompoundButton.Switch</item>
    </style>
    <style name="Widget.CookingUnitConverter.CompoundButton.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:minHeight">@dimen/min_text_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>
    <style name="Widget.CookingUnitConverter.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:minHeight">@dimen/min_text_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>
</resources>